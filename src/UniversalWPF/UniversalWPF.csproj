<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  
  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.0;net452</TargetFrameworks>
    <PackageId>dotMorten.UniversalWPF</PackageId>
    <OutputType>Library</OutputType>
    <RootNamespace>UniversalWPF</RootNamespace>
    <AssemblyName>UniversalWPF</AssemblyName>
    <DocumentationFile>$(OutputPath)\$(AssemblyName).xml</DocumentationFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Morten Nielsen</Authors>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/dotMorten/UniversalWPF</RepositoryUrl>
    <PackageProjectUrl>https://github.com/dotMorten/UniversalWPF</PackageProjectUrl>
    <PackageLicenseUrl>https://raw.githubusercontent.com/dotMorten/UniversalWPF/master/LICENSE</PackageLicenseUrl>
    <PackageTags>WPF RelativePanel SplitView AdaptiveTriggers</PackageTags>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)'=='net452'">
    <Reference Include="System.Xaml">
      <RequiredTargetFramework>4.0</RequiredTargetFramework>
    </Reference>
    <Reference Include="WindowsBase" />
    <Reference Include="PresentationCore" />
    <Reference Include="PresentationFramework" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Themes\Generic.xaml" />
  </ItemGroup>

  <ItemGroup>
    <Page Include="Themes\Generic.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE" Link="LICENSE" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>